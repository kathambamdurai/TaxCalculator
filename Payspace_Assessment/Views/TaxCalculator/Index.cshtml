@model Payspace_Assessment.Models.TaxCalculatorModel

@{
    ViewData["Title"] = "Tax Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CalculateTax", "TaxCalculator", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            Tax Calculator
        </div>
        <div class="row p-2">
            <div class="col-3">
                <label>Annual Income <span class="text-danger">*</span></label>
            </div>
            <div class="col-6">
                @Html.EditorFor(model => model.AnnualIncome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.AnnualIncome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row p-2">
            <div class="col-3">
                <label>Select Postal Code <span class="text-danger">*</span></label>
            </div>
            <div class="col-6">
                @Html.DropDownListFor(m => m.SelectedPostalCode, Model.PostalCodes, "Select a postal code", new { @class = "form-control form-select" })
                @Html.ValidationMessageFor(m => m.SelectedPostalCode, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row p-2">
            <div class="col-9">
                @if (Model.CalculatedTax != 0)
                {
                    <div>
                        <h3>Tax Amount: @Model.CalculatedTax.ToString()</h3>
                    </div>
                }
            </div>
        </div>
        <div class="row p-2">
            <div class="col-3">
                <button type="submit" class="btn btn-primary">Calculate Tax</button>
            </div>
        </div>
    </div>
}